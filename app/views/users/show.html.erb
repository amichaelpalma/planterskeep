  <div class="container">
  
  <div class="container">
  <div class="row">
    <div class="col-6 text-white" style="border: 2px solid white; background-color: black; height: 400px; margin-bottom: 20px;">
    This area will be reserved for the avatar.</div>
    <div class="col-6">
      <div class="w-100 text-white text-center mb-5 py-1">
        This area is reserved for badges.
      </div>
      <div class="w-100 text-white text-center mb-5">
        <h1>@<%= @user.username %></h1>
      </div>
      <div class="w-100 text-white py-2">
        <p>
          Wishlist (can be a modal?):
          <br> Plant Name One <button class="btn btn-warning btn-sm">Sell</button> <button class="btn btn-info btn-sm">Give</button>
          <br>
          <br> Plant Name Two <span class="btn btn-warning btn-sm">Sell</span> <span class="btn btn-info btn-sm">Give</span>
        </p>
      </div>
      <div class="w-100 pt-5">
        <nav class="btn btn-sm btn-primary align-self-end">Follow</nav>
      </div>
    </div>
  </div>
  </div>

  <div class="w-100">
    <div class="card-columns">
      <% @plants.each do |plant| %>
            <div class="card card-flip h-100">
                <div class="card-front text-white bg-dark" style="min-height: 329px;">
                    <div class="card-body">
                      <% if plant.image.attached? %>
                        <%= image_tag plant.image, class: "img-thumbnail img-fluid", style: "min-height: auto; min-width: auto"%>
                      <% else %>
                        <p class="image_placeholder text-center" style="height: 180px;">Image</p>
                      <% end %>
                        <h3 class="card-title">
                          <%= plant.common_name %>
                        </h3>
                        <p class="card-text">
                          <small><i>added @time_ago <br> rating: 
                            <!-- Rating placeholder -->
                            <i class="fas fa-star"></i> <i class="fas fa-star"></i> <i class="fas fa-star"></i> <i class="fas fa-star"></i> <i class="far fa-star text-white"></i> </i></small>
                        </p>
                    </div>
                </div>
                <div class="card-back bg-white">
                    <div class="card-body">
                        <h3 class="card-title">
                          <i><%= plant.scientific_name %></i>
                        </h3>
                        <p class="card-text">
                          <%= plant.description %>
                        </p>
                        <% if user_signed_in? %>
                        <% if current_user.id == plant.user_id %>
                        <nav><%= link_to 'Edit', edit_plant_path(plant), class: "btn btn-success" %> <%= link_to 'Delete', plant_path(plant), method: :delete, data: { confirm: "Are you sure you want to delete this item?" }, class: 'btn btn-danger' %></nav>
                        <% else %>
                        <% end %>
                        <% end %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
  </div>
</div>